{
  "name": "saucedemo_e2e_playwright",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test:all": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:cucumber": "npx cucumber-js --format json:cucumber-report/report.json",
    "test:cucumber:html": "node generate-report.js",
    "test:cucumber:all": "npm run test:cucumber || true && npm run test:cucumber:html && start cucumber-report/report.html",
    "test:cucumber:smoke": "npx cucumber-js --tags \"@smoke\" --format json:cucumber-report/report.json",
    "test:cucumber:regression": "npx cucumber-js --tags \"@regression\" --format json:cucumber-report/report.json",
    "sonar": "dotenv -e .env -- sonar-scanner -Dsonar.login=$SONAR_TOKEN"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/html-formatter": "^21.13.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.0",
    "cross-env": "^10.0.0",
    "cucumber-html-reporter": "^7.2.0",
    "dotenv-cli": "^10.0.0",
    "sonarqube-scanner": "^4.3.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
